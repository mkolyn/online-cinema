@{
    ViewBag.Title = ViewBag.Message;
    string hour = ViewBag.date.Hour < 10 ? "0" + ViewBag.date.Hour.ToString() : ViewBag.date.Hour.ToString();
    string minute = ViewBag.date.Minute < 10 ? "0" + ViewBag.date.Minute.ToString() : ViewBag.date.Minute.ToString();
}

<div class="row">
    <h2>Підтвердити бронювання</h2>

    Дата бронювання:
    <h3>
        @ViewBag.date.Day.@ViewBag.date.Month.@ViewBag.date.Year @hour:@minute
    </h3>

    @if (ViewBag.isPaid)
    {
        <h4>
            Бронювання успішно підтверджено
        </h4>
    }

    <div class="order-items">
        @foreach (var orderItem in ViewBag.orderItems)
        {
            <div class="order-item">
                <div class="order-item-row">
                    <div class="order-item-info">
                        Кінотеатр: @orderItem.CinemaName
                    </div>
                    <div class="order-item-info">
                        Зал: @orderItem.CinemaHallName
                    </div>
                </div>
                <div class="order-item-row">
                    <div class="order-item-info">
                        Фільм: @orderItem.MovieName
                    </div>
                    <div class="order-item-info">
                        Жанр: @orderItem.Genre
                    </div>
                </div>
                <div class="order-item-row">
                    <div class="order-item-info">
                        Ряд: @orderItem.Row
                    </div>
                    <div class="order-item-info">
                        Місце: @orderItem.Cell
                    </div>
                </div>
                <div class="order-item-row">
                    <div class="order-item-info">
                        Ціна: @orderItem.Price грн.
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="">
        Разом: @ViewBag.totalPrice грн.
    </div>

    @if (!ViewBag.isPaid)
    {
    <div class="">
        @using (Html.BeginRouteForm("Default", new { Controller = "Book", Action = "Success", Id = @ViewBag.orderId }))
        {
            <div class="form-group hidden">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Оплатити" class="btn btn-default" />
                </div>
            </div>
        }
        <form method="POST" action="https://www.liqpay.ua/api/3/checkout" accept-charset="utf-8">
            <input type="hidden" name="data" value="@ViewBag.liqpayData" />
            <input type="hidden" name="signature" value="@ViewBag.liqpaySignature" />
            <input type="image" src="//static.liqpay.ua/buttons/p1ru.radius.png" />
        </form>
    </div>
    }
</div>