@model CinemaTickets.Models.CinemaHall

@{
    ViewBag.Title = "Вилучення залу";
    var token = Session["UserID"] != null && Session["UserID"].ToString() != "" ? Html.AntiForgeryToken().ToHtmlString() : "";
}

<h2>Вилучення залу</h2>

<h3>Вилучити зал?</h3>
<div>
    <h4>Вилучення залу</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Назва
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.Raw(token)

        <div class="form-actions no-color">
            <input type="submit" value="Вилучити" class="btn btn-default" /> |
            @Html.RouteLink("До списку", new { controller = "Cinemas", action = "Halls", id = ViewBag.CinemaId })
        </div>
    }
</div>
