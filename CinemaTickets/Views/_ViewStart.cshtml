@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    switch (controller)
    {
        case "administrator":
        case "Administrator":
        case "Cities":
        case "Movies":
        case "Users":
        case "Genres":
        case "Cinemas":
        case "CinemaHalls":
        case "CinemaHallPlaces":
        case "CinemaHallSchedule":
        case "CinemaPlaceGroups":
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}
