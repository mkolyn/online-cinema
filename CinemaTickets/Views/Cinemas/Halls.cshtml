@model IEnumerable<CinemaTickets.Models.CinemaHall>

@{
    ViewBag.Title = "Зали";
}

<h2>Зали</h2>

<div>
    @Html.RouteLink("Створити", new { controller = "CinemaHalls", action = "Create", id = ViewBag.CinemaID })

    @using (Html.BeginForm()) {
    <p>
        Назва: @Html.TextBox("SearchString", ViewBag.searchString as string)
        <input type="submit" value="Фільтр" />
    </p>
    }
</div>
<table class="table">
    <tr>
        <th>
            Назва
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.RouteLink("Редагувати", new { controller = "CinemaHalls", action = "Edit", id = item.ID }) |
            @Html.RouteLink("Вилучити", new { controller = "CinemaHalls", action = "Delete", id = item.ID }) |
            @Html.RouteLink("Конструктор місць", new { controller = "CinemaHallPlaces", action = "Index", id = item.ID }) |
            @Html.RouteLink("Розклад", new { controller = "CinemaHallSchedule", action = "Index", id = item.ID })
        </td>
    </tr>
}

</table>
