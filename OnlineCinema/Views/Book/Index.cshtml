@model OnlineCinema.Models.User

@{
    ViewBag.Title = ViewBag.Message;
    string hour = ViewBag.date.Hour < 10 ? "0" + ViewBag.date.Hour.ToString() : ViewBag.date.Hour.ToString();
    string minute = ViewBag.date.Minute < 10 ? "0" + ViewBag.date.Minute.ToString() : ViewBag.date.Minute.ToString();
}

<div class="row">
    <h2>Забронювати квиток</h2>

    <h3>
        @ViewBag.date.Day.@ViewBag.date.Month.@ViewBag.date.Year @hour:@minute
    </h3>

    <h4>
        @ViewBag.cinemaName - @ViewBag.cinemaHallName
    </h4>

    <h5>
        @ViewBag.movieName
    </h5>

    <div class="book-ticket">
        @Html.Partial("../CinemaHallPlaces/Places")
    </div>
</div>