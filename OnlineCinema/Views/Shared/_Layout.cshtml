<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online cinema</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/admin.css")
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/jquery-ui.min.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (Session["UserID"] != null && Session["UserID"].ToString() != "")
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (Session["CinemaID"] == null || Session["CinemaID"].ToString() == "")
                        {
                            <li>@Html.ActionLink("Cinemas", "Index", "Cinemas")</li>
                            <li>@Html.ActionLink("Genres", "Index", "Genres")</li>
                            <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        }
                        else
                        {
                            <li>@Html.RouteLink("CinemaHalls", new { controller = "Cinemas", action = "Halls", id = Session["CinemaID"].ToString() })</li>
                        }
                        <li>@Html.ActionLink("Movies", "Index", "Movies")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Administrator")</li>
                    </ul>
                </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/scripts.js")
    @Scripts.Render("~/Scripts/jquery-ui.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
