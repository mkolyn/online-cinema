@model OnlineCinema.Models.Movie

@{
    ViewBag.Title = "Вилучення фільму";
}

<h2>Вилучення фільму</h2>

<h3>Вилучити фільм?</h3>
<div>
    <h4>Фільм</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Назва
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
